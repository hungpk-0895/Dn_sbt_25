<div class="row top_content">
	<!-- Top Destination Item -->
	<% @top_rates.each do |top_rate| %>
	<div class="col-lg-3 col-md-6 top_col">
		<div class="top_item">
			<%= link_to tour_url(top_rate) do %>
				<div class="top_item_image"><%= image_tag "/assets/top_1.jpg" %></div>
				<div class="top_item_content">
					<div><%= top_rate.score %></div>
					<div class="top_item_price">$<%= top_rate.price %></div>
					<div class="top_item_text"><%= top_rate.place %></div>
				</div>
			<% end %>
		</div>
	</div>
	<% end %>
	<!-- Top Destination Item -->
</div>
