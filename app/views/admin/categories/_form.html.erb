<%= form_for [:admin, @category] do |f|%>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name, t(".name") %>
  <%= f.text_field :name, class: "form-control" %>
  <% if @category.parent_id.nil? || @category.parent_id != 0 %>
    <%= f.label :parent_id, t(".parent_id") %>
    <%= f.collection_select :parent_id, @parent_cats, :id, :name, include_blank: true, class: "form-control" %>
  <% end %>

  <%= f.submit yield(:btn_submit), class: "btn btn-primary" %>
<%end%>
